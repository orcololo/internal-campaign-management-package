{
  "name": "@campaign-platform/e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for Campaign Platform",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:headed": "HEADLESS=false jest",
    "test:ci": "jest --ci --coverage",
    "test:e2e": "jest --testPathPattern='(voter-registration|voters|example)' --testPathIgnorePatterns='smoke'",
    "test:e2e:headed": "HEADLESS=false jest --testPathPattern='(voter-registration|voters|example)' --testPathIgnorePatterns='smoke'"
  },
  "dependencies": {
    "puppeteer": "^22.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
