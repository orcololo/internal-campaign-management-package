# Application
NODE_ENV=development
PORT=3001

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration (Supabase/Production)
# Option 1: Use connection URL (recommended)
POSTGRES_URL=postgres://user:password@host:port/database?sslmode=require

# Option 2: Or use individual parameters
POSTGRES_HOST=localhost
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=postgres
DB_PORT=5432
DB_USER=postgres

# Keycloak Configuration (for future authentication setup)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=campaign-platform
KEYCLOAK_CLIENT_ID=api-client
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Google Maps API (for future maps integration)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
